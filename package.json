{
  "name": "services-custom-fields",
  "description": "Application developed to manage custom fields for various Nuvemshop (Tiendanube) business domains.",
  "devDependencies": {
    "@commitlint/config-conventional": "^16.0.0",
    "@types/node": "^17.0.19",
    "git-commit-guide": "^1.0.0",
    "husky": "^7.0.4",
    "stylelint": "^15.9.0",
    "stylelint-config-standard": "^33.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "commit": "git-cz",
    "test": "mocha *.test.js",
    "format": "prettier --write *.js",
    "semantic-release": "semantic-release"
  },
  "config": {
    "unsafe-perm": true,
    "commitizen": {
      "path": "./custom-cz.js",
      "jiraMode": true,
      "skipScope": true
    },
    "publishConfig": {
      "access": "public"
    }
  }
}
